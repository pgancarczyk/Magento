<?xml version="1.0"?>
<config>
    <modules>
        <Polcode_Log>
            <version>0.1.0</version>
        </Polcode_Log>
    </modules>
    <global>
        <models>
            <polcode_log>
                <class>Polcode_Log_Model</class>
                <resourceModel>polcode_log_resource</resourceModel>
            </polcode_log>
            <polcode_log_resource>
                <class>Polcode_Log_Model_Resource</class>
                <entities>
                    <log>
                        <table>db_logs</table>
                    </log>
                </entities>
            </polcode_log_resource>
        </models>
        <resources>
            <polcode_log_setup>
                <setup>
                    <module>Polcode_Log</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </polcode_log_setup>
        </resources>
        <blocks>
            <log>
                <class>Polcode_Log_Block</class>
            </log>
        </blocks>
        <helpers>
            <log>
                <class>Polcode_Log_Helper</class>
            </log>
        </helpers>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Polcode_Log before="Mage_Adminhtml">Polcode_Log_Adminhtml</Polcode_Log>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <default>
        <dev>
            <db_logs>
                <enabled>1</enabled>
            </db_logs>
        </dev>
    </default>    
</config>