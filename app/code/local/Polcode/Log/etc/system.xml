<config>
    <sections>
        <dev>
            <groups>
                <db_logs>
                    <label>Database logs</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled>
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                            
                        </enabled>
                        <levels>
                            <label>Keep only logs with levels</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>polcode_log/system_config_source_level</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                                 
                        </levels>
                        <archivize_after>
                            <label>Archivize logs after</label>
                            <frontend_type>select</frontend_type>
                            <source_model>polcode_log/system_config_source_frequency</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                                 
                        </archivize_after>
                        <archivize_every>
                            <label>Archivization frequency</label>
                            <frontend_type>select</frontend_type>
                            <source_model>polcode_log/system_config_source_frequency</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                                 
                        </archivize_every>
                        <emails>
                            <label>Send notifications</label>
                            <frontend_model>polcode_log/config_email</frontend_model>
                            <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </emails>
                        <levels_email>
                            <label>Send notifications only for logs with levels</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>polcode_log/system_config_source_level</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                                 
                        </levels_email>
                    </fields>
                    <expanded>1</expanded>                   
                </db_logs>
            </groups>
        </dev>
    </sections>
</config>