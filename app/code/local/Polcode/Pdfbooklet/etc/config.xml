<?xml version="1.0"?>
<config>
    <modules>
        <Polcode_Pdfbooklet>
            <version>0.1.0</version>
        </Polcode_Pdfbooklet>
    </modules>
    <frontend>
        <layout>
            <updates>
                <pdfbooklet>
                    <file>pdfbooklet.xml</file>
                </pdfbooklet>
            </updates>
        </layout>
        <translate>
            <modules>
                <Polcode_Pdfbooklet>
                    <files>
                        <default>Polcode_Pdfbooklet.csv</default>
                    </files>
                </Polcode_Pdfbooklet>
            </modules>
        </translate>
    </frontend>
    <admin>
        <layout>
            <updates>
                <pdfbooklet>
                    <file>pdfbooklet.xml</file>
                </pdfbooklet>
            </updates>
        </layout>
        <translate>
            <modules>
                <Polcode_Pdfbooklet>
                    <files>
                        <default>Polcode_Pdfbooklet.csv</default>
                    </files>
                </Polcode_Pdfbooklet>
            </modules>
        </translate>
    </admin>
    <global>
        <blocks>
            <pdfbooklet>
                <class>Polcode_Pdfbooklet_Block</class>
            </pdfbooklet>
        </blocks>
        <models>
            <pdfbooklet>
                <class>Polcode_Pdfbooklet_Model</class>
                <resourceModel>pdfbooklet_resource</resourceModel>
            </pdfbooklet>
            <pdfbooklet_resource>
                <class>Polcode_Pdfbooklet_Model_Resource</class>
                <entities>
                    <catalog_category>
                        <table>catalog_category</table>
                    </catalog_category>
                    <catalog_product>
                        <table>catalog_product</table>
                    </catalog_product>                    
                </entities>
            </pdfbooklet_resource>
        </models>
        <resources>
            <pdfbooklet_setup>
                <setup>
                    <module>Polcode_Pdfbooklet</module>
                    <class>Polcode_Pdfbooklet_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </pdfbooklet_setup>
        </resources>
    </global>
</config>