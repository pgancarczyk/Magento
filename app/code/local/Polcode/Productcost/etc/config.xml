<?xml version="1.0"?>
<config>
    <modules>
        <Polcode_Productcost>
            <version>0.1.0</version>
        </Polcode_Productcost>
    </modules>
    <adminhtml>
        <events>
            <core_block_abstract_to_html_before>
                <observers>
                    <productcost_observer>
                        <type>singleton</type>
                        <class>productcost/observer</class>
                        <method>beforeBlockToHtml</method>
                    </productcost_observer>
                </observers>
            </core_block_abstract_to_html_before>
            <eav_collection_abstract_load_before>
                <observers>
                    <productcost_observer>
                        <class>productcost/observer</class>
                        <method>beforeCollectionLoad</method>
                    </productcost_observer>
                </observers>
            </eav_collection_abstract_load_before>
        </events>
    </adminhtml>
    <global>
        <models>
            <productcost>
                <class>Polcode_Productcost_Model</class>
            </productcost>
        </models>
    </global>
</config>