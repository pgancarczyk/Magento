<?xml version="1.0"?>
<layout>
    <default>
        <reference name="top.links">
            <remove name="checkout_cart_link" />
            <block type="checkout/links" name="checkout_cart_link_custom">
                <action method="addCartLink"></action>
            </block>
        </reference>
        <reference name="header">
           <remove name="store_language"/>
           <block type="checkout/onepage_link" name="checkout.cart.methods.onepage" template="checkout/onepage/link.phtml" />
<!--             <reference name="top.container"> 
                <block type="checkout/onepage_link" before="content" after="top.links" name="checkout.cart.methods.onepage" template="checkout/onepage/link.phtml"/>
             </reference> -->
        </reference>
        <reference name="footer">
            <remove name="footer_links" />
            <remove name="helloworld" />
            <block type="newsletter/subscribe" name="newsletter" as="newsletter" template="newsletter/subscribe.phtml" before="-" />
            <block type="cms/block" name="contact_us">
                <action method="setBlockId"><block_id>contact_us</block_id></action>
            </block>
            <block type="cms/block" name="customer_service">
                <action method="setBlockId"><block_id>customer_service</block_id></action>
            </block>
            <block type="cms/block" name="help_guides">
                <action method="setBlockId"><block_id>help_guides</block_id></action>
            </block>
            <block type="cms/block" name="about_our_site">
                <action method="setBlockId"><block_id>about_our_site</block_id></action>
            </block>   
            <block type="cms/block" name="payment">
                <action method="setBlockId"><block_id>payment</block_id></action>
            </block>                                 
        </reference>
    </default>
    <cms_index_index>
        <reference name="head">
            <action method="addItem"><type>skin_js</type><name>js/jquery-1.6.1.min.js</name></action>
            <action method="addItem"><type>skin_js</type><name>js/jquery.nivo.slider.pack.js</name></action>
            <action method="addItem"><type>skin_js</type><name>js/jquery.nivo.slider.js</name></action>
            <action method="addItem"><type>skin_js</type><name>js/jquery.msCarousel-min.js</name></action>
            <action method="addItem"><type>skin_css</type><name>css/nivo-slider.css</name></action>
            <action method="addItem"><type>skin_css</type><name>css/mscarousel.css</name></action>
        </reference>
    
    </cms_index_index>
</layout>
