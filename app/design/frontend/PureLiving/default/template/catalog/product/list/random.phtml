<?php
$products = Mage::getModel('catalog/product')->getCollection();
$products->addAttributeToSelect(array('name', 'thumbnail', 'price', 'short_description'));
Mage::getSingleton('catalog/product_status')->addVisibleFilterToCollection($products);
Mage::getSingleton('catalog/product_visibility')->addVisibleInCatalogFilterToCollection($products); 
$products->getSelect()->order('RAND()');
$products->getSelect()->limit(4); ?>

<div id="buy-more">

        <h3>Or how about ...</h3>
        
<?php foreach ($products as $product) : ?>
        <div class="buy-more-box">
                <a href="<?php echo $product->getProductUrl()?>"><img src="<?php echo Mage::helper('catalog/image')->init($product, 'thumbnail')->resize(160)?>" alt=""></a>	
                <p class="buy-more-title"><a href="<?php echo $product->getProductUrl()?>"><?php echo $product->getName()?></a></p>
                <p class="buy-more-description"><?php echo $product->getShortDescription()?></p>
                <p class="buy-more-price">From <?php echo Mage::app()->getStore()->getCurrentCurrency()->format($product->getFinalPrice());?></p>			
        </div>
<?php endforeach; ?>
    <div class="clr"></div>
</div><!--buy-more-->
